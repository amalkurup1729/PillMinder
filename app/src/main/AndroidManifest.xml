<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pillminder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PillMinder">
        <activity android:name=".NewsFeeds.Newsfeed"></activity>
        <activity android:name=".GoogleMap.MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key"/>

        <activity android:name=".NotificationMessage" />
        <activity android:name=".CreateEvent" />
        <activity android:name=".MainActivity2" />
        <activity android:name=".DoctorAccount" />
        <activity android:name=".DoctorRegistration" />
        <activity android:name=".PasswordActivity" />
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientAccount" />
        <activity android:name=".PatientLogin" />
        <activity android:name=".PatientmainLogin" />
        <activity android:name=".AmbulancedriverLogin" />
        <activity android:name=".DoctorLogin" />
        <activity android:name=".JunctionPage" />
    </application>

</manifest>